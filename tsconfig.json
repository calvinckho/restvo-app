{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "es2020",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2020",
    "downlevelIteration": true, //needed to use [...new Set(Array)] in myconversation.page.ts
    "allowJs": true, //needed for manually added js file
    "skipLibCheck": true,
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
