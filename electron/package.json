{
  "name": "Restvo",
  "version": "1.8.0",
  "description": "Connect with Mentors",
  "private": true,
  "main": "./build/index.js",
  "scripts": {
    "build": "tsc",
    "electron:start": "npm run build && electron ./",
    "electron:pack": "npm run build && electron-builder build --dir",
    "electron:build-windows": "npm run build && electron-builder build --windows",
    "electron:build-mac": "npm run build && electron-builder build --mac",
    "dist": "npm run build && electron-builder -mw --x64 --ia32",
    "publish": "npm run build && electron-builder -mw --x64 --ia32 -p always"
  },
  "dependencies": {
    "@capacitor-community/electron-core": "^1.2.3",
    "ajv": "^6.12.6",
    "electron-is-dev": "^1.2.0",
    "electron-log": "^1.3.0",
    "electron-push-receiver": "^2.1.3",
    "electron-updater": "^4.3.5",
    "source-map-support": "^0.5.19"
  },
  "devDependencies": {
    "electron": "^9.4.3",
    "electron-builder": "^22.9.1",
    "typescript": "^3.9.9"
  },
  "keywords": [
    "capacitor",
    "electron"
  ],
  "author": "Calvin Ho",
  "license": "MIT",
  "build": {
    "appId": "com.restvo.electron",
    "productName": "Restvo",
    "buildVersion": "1",
    "copyright": "Copyright Â© 2020 Restvo Inc.",
    "mac": {
      "category": "Social Networking",
      "darkModeSupport": true,
      "icon": "assets/appIcon.png"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/appIcon.ico"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "calvinckho",
        "repo": "restvo-desktop"
      }
    ],
    "files": [
      "assets/*",
      "build/index.js",
      "preloader.js",
      "plugins/*",
      "capacitor.config.json",
      "app/**"
    ]
  }
}
